<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

 <VBox spacing="12" alignment="TOP_CENTER"
      style="-fx-padding: 20; -fx-background-color: grey ;"
      xmlns="http://javafx.com/javafx/21" 
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="app.controllers.TaskController">

    <!-- TÃ­tulo -->
       <Label text="Task Manager"
               style="
                     -fx-font-size: 24px;
                     -fx-font-weight: bold;
                     -fx-text-fill: lightgrey;
                     -fx-effect: dropshadow(gaussian, black, 3, 0.8, 0, 0);
       " />

    <!-- Campo de entrada -->
    <HBox spacing="8" alignment="CENTER">

       <TextField fx:id="taskInput" 
                  promptText="Add a task..." 
                  HBox.hgrow="ALWAYS"
                  style="-fx-background-radius: 8; -fx-padding: 8; -fx-background-color: white;" />

       <Button text="Add" onAction="#handleAddTask"
        style="-fx-background-color: #93c5faff; 
               -fx-text-fill: white; 
               -fx-background-radius: 8;
               -fx-padding: 8 16;" />

       <Button text="Delete" onAction="#handleDeleteTask" 
       style="-fx-background-color: #ee3b3bff; 
               -fx-text-fill: white; 
               -fx-background-radius: 8;
               -fx-padding: 8 16;" />

    </HBox>

    <ListView fx:id="taskListView" 
              style="-fx-background-color: lightgrey ;" />
</VBox>
